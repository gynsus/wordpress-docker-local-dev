# Docker Compose project name prefix
COMPOSE_PROJECT_NAME=mywp

# WordPress database configuration
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress
MYSQL_ROOT_PASSWORD=root

# Host ports mapping (change these if ports are already in use)
PROJECT_PORT=8000         # WordPress site (http://localhost:8000)
PMA_PORT=8080             # phpMyAdmin (http://localhost:8080)
MAILHOG_HTTP_PORT=8025    # MailHog UI (http://localhost:8025)
MAILHOG_SMTP_PORT=1025    # MailHog SMTP port (used by WordPress emails)